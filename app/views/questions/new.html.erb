<head>
<link href='https://fonts.googleapis.com/css?family=Lato:400,300,700' rel='stylesheet' type='text/css'>
</head>
<div class="row">
  <div class= "col-sm-3">
  </div>
  <div class="contnuevo col-sm-6">
    <% flash.each do |key, message| %>
        <div class="alert alert-<%= key %>" role="alert"><p style="text-align:center"><%= message %></p></div>
    <% end %>
    <h1>NUEVA PREGUNTA</h1>
    <%= form_for @question do |f| %>  <!-- cada f hace ref a un field del proyecto --->
      <div>
        <div>
         <%= f.text_field :title, placeholder:"Titulo" %>
       </div>
       <div>
         <%= f.text_area :description, placeholder:"Descrpción", :class => 'markItUp'%>
       </div>
      </div>
      <%= f.submit "¡Preguntar!", class: "btn btn-primary botonpre"%>
      <% end %>
    </div>
    <div class= "col-sm-3">
    </div>

</div>
<script type="text/javascript" >

  $(document).ready(function() {
  $(".markItUp").markItUp(mySettings);
  });
</script>
